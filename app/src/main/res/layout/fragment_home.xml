<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <Button
        android:id="@+id/stopFileServerBtn"
        android:layout_width="170dp"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="Stop UDP File Server"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startFileServerBtn" />

    <Button
        android:id="@+id/startFileServerBtn"
        android:layout_width="170dp"
        android:layout_height="65dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="10dp"
        android:text="Start UDP File Server"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sendPubKeyBtn" />

    <Button
        android:id="@+id/stopServerBtn"
        android:layout_width="170dp"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Stop UDP Msg Server"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startServerBtn" />

    <Button
        android:id="@+id/startServerBtn"
        android:layout_width="174dp"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="28dp"
        android:text="Start UDP File Server"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sendMsgBtn" />

    <Button
        android:id="@+id/stopTunnel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Stop Tunnel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/makeTunnel" />

    <EditText
        android:id="@+id/enterIPEditText"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Enter IP"
        android:inputType="textPersonName"
        android:text="fe80:6661:6d69:6c79:a933:2cb3:b5cf:e60c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/makeTunnel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Establish tunnel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stopServerBtn" />

    <EditText
        android:id="@+id/enterComEditText"
        android:layout_width="350dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Enter message"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterIPEditText" />

    <Button
        android:id="@+id/sendMsgBtn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Send message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterComEditText" />

    <Button
        android:id="@+id/sendPubKeyBtn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="10dp"
        android:text="Send public key"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterComEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>